<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title style="text-transform: capitalize;"><%= room.name %></title>
    <link rel="stylesheet" href="/css/chat.css">
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://kit.fontawesome.com/be9c4374e2.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/iziToast.css">
</head>
<body>    

    <% if(isLocked) {%>

        <style>
            body {
                margin: 0;
                padding: 0;
                background-color: #222;
                display: flex;
                justify-content: center;
                align-items: center;
                height: 100vh;
            }
            .container {
                text-align: center;
            }
            input[type="password"] {
                padding: 10px;
                margin-bottom: 10px;
                width: 200px;
            }
            button {
                padding: 10px 20px;
                background-color: #4CAF50;
                color: white;
                border: none;
                cursor: pointer;
                border-radius: 5px;
                transition: background-color 0.3s ease;
            }
            button:hover {
                background-color: #45a049;
            }
        </style>

        <body>
            <div class="container">
                <form id="password-form" method="POST">
                    <input id="room-password" name="password" type="password" placeholder="Enter room password" required>
                    <br>
                    <button type="submit">Join</button>
                </form>
            </div>
        </body>

        <input id="room-slug" type="hidden" value="<%= slug %>">

    <%} else {%>
        <nav>
            <a href="/">Home</a>
            <a href="/rooms">Rooms</a>
            <a href="/profile">Profile</a>
            <a href="/logout">Log out</a>
        </nav>
        <section class="message-area">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="chat-area">
                            <!-- chatlist -->
                            <div class="chatlist">
                                <div class="modal-dialog-scrollable">
                                    <div class="modal-content">
                                        <div class="chat-header">
                                            <div class="msg-search">
                                                <input type="text" class="form-control" id="inlineFormInputGroup" placeholder="Search" aria-label="search">
                                                <a class="add" href="#"><img class="img-fluid" src="https://mehedihtml.com/chatbox/assets/img/add.svg" alt="add"></a>
                                            </div>
    
                                            <ul class="nav nav-tabs" id="myTab" role="tablist">
                                                <li class="nav-item" role="presentation">
                                                    <button class="nav-link active" id="Open-tab" data-bs-toggle="tab" data-bs-target="#Open" type="button" role="tab" aria-controls="Open" aria-selected="true">Open</button>
                                                </li>
                                                <li class="nav-item" role="presentation">
                                                    <button class="nav-link" id="Closed-tab" data-bs-toggle="tab" data-bs-target="#Closed" type="button" role="tab" aria-controls="Closed" aria-selected="false">Closed</button>
                                                </li>
                                            </ul>
                                        </div>
    
                                        <div class="modal-body">
                                            <!-- chat-list -->
                                            <div class="chat-lists">
                                                <div class="tab-content" id="myTabContent">
                                                    <div class="tab-pane fade show active" id="Open" role="tabpanel" aria-labelledby="Open-tab">
                                                        <div class="chat-list">
                                                        
                                                        </div>
                                                    </div>
                                                </div>
    
                                            </div>
                                            <!-- chat-list -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- chatlist -->
    
                            <!-- chatbox -->
                            <div class="chatbox">
                                <div class="modal-dialog-scrollable">
                                    <div class="modal-content">
                                        <div class="msg-head">
                                            <div class="row">
                                                <div class="col-8">
                                                    <div class="d-flex align-items-center">
                                                        <span class="chat-icon"><img class="img-fluid" src="https://mehedihtml.com/chatbox/assets/img/arroleftt.svg" alt="image title"></span>
                                               
                                                        <div class="flex-grow-1 ms-3">
                                                            <h3><%= room.name %></h3>
                                                            <p id="people-amount"></p>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-4">
                                                    <ul class="moreoption">
                                                        <li class="navbar nav-item dropdown">
                                                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v" aria-hidden="true"></i></a>
                                                            <ul class="dropdown-menu">
                                                                <% if(user.id == room.UserId) {%>
                                                                    <li><a data-room-id="<%=room.id%>" class="dropdown-item bg-danger text-light delete-room" href="#">Delete Room</a></li>
                                                                <%}%>
                                                                
                                                                <li><a class="dropdown-item" href="#">Another action</a></li>
                                                                <li>
                                                                    <hr class="dropdown-divider">
                                                                </li>
                                                                <li><a class="dropdown-item" href="#">Something else here</a></li>
                                                            </ul>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
    
                                        <div id="image-container"></div>

    
                                        <div id="messages-container" class="modal-body">
                                            <div class="msg-body">
                                                <ul class="messages">
                                          
                                                    <% if(messages) { %>
                                                        <% messages.forEach((message) => { %>
                                                           
                                                                <li class="<% if(message.User.id == user.id){ %>repaly<%} else {%>sender<%}%>">
                                                                    <% if(!message.file) { %>
                                                                    <p> 
                                                                        <% if(message.User.id != user.id){ %>
                                                                            <span class="text-danger"><%= message.User.firstName %> <%= message.User.lastName %>: </span> 
                                                                        <%}%>
                                                                            <%= message.text %> </p>
                                                                  
                                                                    <% } else {%>

                                                                        <img style="width: 300px; height: auto;" src="/<%=message.file%>" alt="">
                                                                        <% 
                                                                            const createdAt = new Date(message.createdAt);
                                                                            const hours = ("0" + createdAt.getHours()).slice(-2);
                                                                            const minutes = ("0" + createdAt.getMinutes()).slice(-2);
                                                                        %>
                                                                        <% if(message.User.id != user.id){ %>
                                                                            <span class="time"><%= message.User.firstName %> <%= message.User.lastName %></span> 
                                                                        <%}%>
                                                                        <span class="time"><%= hours + ':' + minutes %></span>
                                                                    <% } %>
                                                                </li>
                                        
                                                           
                                                            
                                                        <% })%> 
                                                    <%}%>       
                                                   
                                                </ul>
                                            </div>
                                        </div>
    
    
                                        <audio id="message-bip" src="/sounds/bip.mp3"></audio>
                                        <div class="send-box">
                                            <form id="message-form" action="">
                                                <input id="chat-message-input" class="form-control" type="text" name="message">
                                                <button><i class="fa fa-paper-plane" aria-hidden="true"></i>Send</button>
                                            </form>

                                            
                                        <input id="user-id" type="hidden" value="<%= user.id %>">
                                        <input id="room-id" type="hidden" value="<%= room.id %>">

    
                                            <div class="send-btns">
                                                <div class="attach">
                                                    <div class="button-wrapper">
                                                        <span class="label">
                                                            <img src="/images/folder.png" alt="image title"> attached file 
                                                        </span><input onchange="upload(this.files)" type="file" name="upload" id="upload" class="upload-box" placeholder="Upload File" aria-label="Upload File">
                                                    </div>
    
                                                    <select class="form-control" id="exampleFormControlSelect1">
                                                        <option>Select template</option>
                                                        <option>Template 1</option>
                                                        <option>Template 2</option>
                                                    </select>
    
                                                    <div class="add-apoint">
                                                        <a href="#" data-toggle="modal" data-target="#exampleModal4"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewbox="0 0 16 16" fill="none"><path d="M8 16C3.58862 16 0 12.4114 0 8C0 3.58862 3.58862 0 8 0C12.4114 0 16 3.58862 16 8C16 12.4114 12.4114 16 8 16ZM8 1C4.14001 1 1 4.14001 1 8C1 11.86 4.14001 15 8 15C11.86 15 15 11.86 15 8C15 4.14001 11.86 1 8 1Z" fill="#7D7D7D"/><path d="M11.5 8.5H4.5C4.224 8.5 4 8.276 4 8C4 7.724 4.224 7.5 4.5 7.5H11.5C11.776 7.5 12 7.724 12 8C12 8.276 11.776 8.5 11.5 8.5Z" fill="#7D7D7D"/><path d="M8 12C7.724 12 7.5 11.776 7.5 11.5V4.5C7.5 4.224 7.724 4 8 4C8.276 4 8.5 4.224 8.5 4.5V11.5C8.5 11.776 8.276 12 8 12Z" fill="#7D7D7D"/></svg> Appoinment</a>
                                                    </div>
                                                </div>
                                            </div>
    
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- chatbox -->
    
    
                    </div>
                </div>
            </div>
            </div>
        </section>
        <!-- char-area -->

    
  
    <script src="/js/chat.js"></script>
    <%}%>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/js/iziToast.min.js"></script>
    <script>

        $.ajaxSetup({
                beforeSend: function(xhr) {
                    xhr.setRequestHeader('X-CSRF-Token', $('meta[name="csrf-token"]').attr('content'));
                }
        });

        $('#password-form').on('submit', function(e){

            e.preventDefault()

            const password = $('#room-password').val()
            const selectedRoom = $('#room-slug').val()

            $.ajax({
                type: 'POST',
                url: '/check-password',
                data: {password, selectedRoom},
                success: function(){
                  window.location.href = `/rooms/${selectedRoom}`
                },
                error: function(e){
                  iziToast.error({
                        title: 'Error',
                        message: JSON.stringify(e.responseJSON.message),
                    });
                }
              })

        })

        $('.delete-room').on('click', function(e){

            e.preventDefault()

            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {

                    const roomId = $(this).data('room-id')

                    $.ajax({
                        type: 'DELETE',
                        url: '/rooms/delete',
                        data: {roomId},
                        success: function(){
                            window.location.href = `/rooms`
                        },
                        error: function(e){
                        iziToast.error({
                                title: 'Error',
                                message: JSON.stringify(e.responseJSON.message),
                            });
                        }
                    })

                }

            });

        })



    </script>
</body>
</html>